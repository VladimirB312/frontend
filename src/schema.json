{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "Background": {
            "anyOf": [
                {
                    "properties": {
                        "color": {
                            "type": "string"
                        },
                        "type": {
                            "const": "solid",
                            "type": "string"
                        }
                    },
                    "required": [
                        "color",
                        "type"
                    ],
                    "type": "object"
                },
                {
                    "properties": {
                        "src": {
                            "type": "string"
                        },
                        "type": {
                            "const": "image",
                            "type": "string"
                        }
                    },
                    "required": [
                        "src",
                        "type"
                    ],
                    "type": "object"
                }
            ]
        },
        "ImageElement": {
            "allOf": [
                {
                    "properties": {
                        "id": {
                            "type": "string"
                        },
                        "position": {
                            "properties": {
                                "x": {
                                    "type": "number"
                                },
                                "y": {
                                    "type": "number"
                                }
                            },
                            "required": [
                                "x",
                                "y"
                            ],
                            "type": "object"
                        },
                        "size": {
                            "properties": {
                                "height": {
                                    "type": "number"
                                },
                                "width": {
                                    "type": "number"
                                }
                            },
                            "required": [
                                "height",
                                "width"
                            ],
                            "type": "object"
                        }
                    },
                    "required": [
                        "id",
                        "position",
                        "size"
                    ],
                    "type": "object"
                },
                {
                    "properties": {
                        "src": {
                            "type": "string"
                        },
                        "type": {
                            "const": "image",
                            "type": "string"
                        }
                    },
                    "required": [
                        "src",
                        "type"
                    ],
                    "type": "object"
                }
            ]
        },
        "TextElement": {
            "allOf": [
                {
                    "properties": {
                        "id": {
                            "type": "string"
                        },
                        "position": {
                            "properties": {
                                "x": {
                                    "type": "number"
                                },
                                "y": {
                                    "type": "number"
                                }
                            },
                            "required": [
                                "x",
                                "y"
                            ],
                            "type": "object"
                        },
                        "size": {
                            "properties": {
                                "height": {
                                    "type": "number"
                                },
                                "width": {
                                    "type": "number"
                                }
                            },
                            "required": [
                                "height",
                                "width"
                            ],
                            "type": "object"
                        }
                    },
                    "required": [
                        "id",
                        "position",
                        "size"
                    ],
                    "type": "object"
                },
                {
                    "properties": {
                        "align": {
                            "type": "string"
                        },
                        "color": {
                            "type": "string"
                        },
                        "font": {
                            "type": "string"
                        },
                        "textSize": {
                            "type": "number"
                        },
                        "type": {
                            "const": "text",
                            "type": "string"
                        },
                        "value": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "align",
                        "color",
                        "font",
                        "textSize",
                        "type",
                        "value"
                    ],
                    "type": "object"
                }
            ]
        }
    },
    "properties": {
        "slides": {
            "items": {
                "properties": {
                    "background": {
                        "$ref": "#/definitions/Background"
                    },
                    "id": {
                        "type": "string"
                    },
                    "objects": {
                        "items": {
                            "anyOf": [
                                {
                                    "$ref": "#/definitions/TextElement"
                                },
                                {
                                    "$ref": "#/definitions/ImageElement"
                                }
                            ]
                        },
                        "type": "array"
                    }
                },
                "required": [
                    "background",
                    "id",
                    "objects"
                ],
                "type": "object"
            },
            "type": "array"
        },
        "title": {
            "type": "string"
        }
    },
    "required": [
        "slides",
        "title"
    ],
    "type": "object"
}

